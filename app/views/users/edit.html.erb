<%= form_for @user do |f|%>
<table>
  <tr>
  <td><%= f.label :name%></td>
  <td><%= f.text_field :name%></td>
  </tr>
  <tr>
  <td><%= f.label :email%></td>
  <td><%= f.email_field :email%></td>
  </tr>
  <tr>
  <td><%= f.label :mobile%></td>
  <td><%= f.text_field :mobile%></td>
  </tr>
  <tr>
  <td><%= f.label :status%></td>
  <td><%= f.check_box :status%></td>
  </tr>
    <tr>
  <td><%= f.submit "Save"%></td>
  </tr>
</table>
<%end%>

