<!--%= @users.inspect %-->
<div class="container">
<table class="table table-striped">
	<tr>
	    <th>Image</th>
		<th>Name</th>
		<th>Email</th>
		<th>Mobile</th>
		<th>Status</th>
		</tr>
<% @users.each do | i | %>
	<tr>  
	  <td><%= image_tag i.image.photo(:thumb) unless i.image.blank?%> </td>
      <td><%= i.name %></td>
      <td><%= i.email %></td>
      <td><%= i.mobile %></td>
      <td><%= i.status %></td>
      <td><%= link_to "Show", user_path(i), :class=>"btn btn-success"%></td>
      <td><%= link_to "Edit", edit_user_path(i)%></td>
      <td><%= link_to "Delete", i, method: :delete, data: {confirm: "Are you sure!"}, :class=>"btn btn-danger"%></td>
	</tr>
<%end%>
</table>

<%= link_to "Add New User", new_user_path%>
</div>